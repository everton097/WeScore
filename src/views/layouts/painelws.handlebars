<html lang="pt-br">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link id="style" rel="stylesheet" href="/css/stylesMain.css" />
		<link id="style" rel="stylesheet" href="/css/styleJogos.css" />
		<link id="style" rel="stylesheet" href="/css/styleJogosQuadra.css" />
		<link id="style" rel="stylesheet" href="/css/styleDashboard.css" />
		<link id="style" rel="stylesheet" href="/css/styleCampeonato.css" />
		<!-- icon link -->
		<link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
		<link
			rel="stylesheet"
			href="https://unpkg.com/boxicons@latest/css/boxicons.min.css"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
			rel="stylesheet"
		/>
		<!-- axios link -->
		<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
		<script src="/js/token.js"></script>
		<title>WeScore</title>
	</head>
	<body>
		<!-- Menu -->
		<header>
			<div class="logo"><a href="/painelws">We<span>Score</span></a></div>
			<div class="hamburger">
				<div class="line"></div>
				<div class="line"></div>
				<div class="line"></div>
			</div>
			<nav class="nav-bar">
				<ul>
					<li><a href="/painelws/campeonato">Campeonatos</a></li>
					<li><a href="/painelws/partidas">Partidas</a></li>
					<li><a href="/painelws/times">Times</a></li>
					<li><a href="/painelws/jogadores">Jogadores</a></li>
					<li><a href="/painelws/usuarios">Usuarios</a></li>
					<div class="user_image">
						<img id="user_img"
							src="http://localhost:3001/public/upload/img/usuario/{{user.userLogo}}"
							alt="logo do usuario"
						/>
						<div id="user_input" class="user_input">
							<p>Olá, {{user.userName}}!</p>
							<button class="user_input_value">
								<i class="ri-user-line"></i>
								Perfil
							</button>
							<button id="logoutButton" class="user_input_value">
								<i class="ri-logout-box-r-line"></i>
								Sair
							</button>
                            <a href="/painelws/settings"><button class="user_input_value" id="settingsButton">
                                <i class="lni lni-cog"></i>
                                Ajustes
                            </button>
                            </a>
						</div>
					</div>
				</ul>
			</nav>
		</header>

		<!-- Conteúdo da página -->
		{{{body}}}

		<!-- footer -->
		<section class="section-footer">
			<div class="footer">
				<div class="footer-content logo">
				<a href="/" >We<span>Score</span></a>
				<p>Potencializando o Seu Controle.</p>
				<div class="icon">
					<a href="#"><i class="bx bxl-tiktok"></i></a>
					<a href="#"><i class="bx bxl-instagram-alt"></i></a>
					<a href="#"><i class="bx bxl-google"></i></a>
					<a href="#"><i class="bx bxl-twitter"></i></a>
				</div>
			</div>

			<div class="footer-content">
				<h4>Menus</h4>
				<li><a href="/">Home</a></li>
				<li><a href="/jogos">Jogos</a></li>
				<li><a href="/contato">Contato</a></li>
				<li><a href="/login">Login</a></li>
			</div>
			</div>
		</section>
		<!-- Sweetalert para interação com o usuário-->
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.31/dist/sweetalert2.all.min.js"></script>
		<script src="/js/menu.js"></script>
		<script src="/js/scriptJogos.js"></script>
		<script src="/js/dashboard.js"></script>
	</body>
</html>