<section class="containePainelws">
    <div class="cardForm">
        <span id="AdicionarTimeCamp" class="title" data-campeonato-id="{{campeonato.idCampeonato}}">Adicionar partida ao
            campeonato {{campeonato.nomeCampeonato}}</span>

        <form id="createPartidaForm" enctype="multipart/form-data" class="form">
            <div class="group">
                <div id="subselectorContainer" class="subselector_container">
                    <label for="timesCadastrados">Times cadastrados para inclusão</label>
                    {{#if time.length}}
                    {{#each time}}
                    <div id="{{idTime}}" class="subselector cardTimeSelect" data-time-id="{{idTime}}">
                        <div class="subselector_image">
                            <img src="http://localhost:3001/public/upload/img/time/{{logoTime}}" alt="logo do time" />
                        </div>
                        <div class="subselector_content">
                            <div class="subselector_name">
                                <p class="subselector_nameTime">{{nomeTime}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <p>Nenhum time cadastrado anteriormente.</p>
                    {{/if}}
                </div>
            </div>

            <div class="group">
                <div id="cadrastroNovoPartida" class="subselector_container">
                    <label for="cadastrarNovoPartida">Times</label>
                    <div id="TimesNewPartida">
                        <div id="TimesNewPartida0" class="subselector cardTimeSelect" data-time-id="{{idTime}}">
                            <div class="subselector_image"></div>
                            <div class="subselector_content">
                                <div class="subselector_name">
                                    <p class="subselector_nameTime">Escolha um time</p>
                                </div>
                            </div>
                        </div>
                        <h4>VS</h4>
                        <div id="TimesNewPartida0" class="subselector cardTimeSelect" data-time-id="{{idTime}}">
                            <div class="subselector_image"></div>
                            <div class="subselector_content">
                                <div class="subselector_name">
                                    <p class="subselector_nameTime">Escolha um time</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="group">
                    <input name="qtdeSets" placeholder="" type="text" required="">
                    <label for="qtdeSets">Quantidade de Sets</label>
                </div>
            </div>


        </form>
        <button id="savePartidaForm" type="submit">Adicionar</button>
    </div>
</section>

<!-- Scripts do formulário curso -->
<script src="/js/campeonatoPartidaAdd.js"></script>